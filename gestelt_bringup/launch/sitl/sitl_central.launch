    <remap from="~cloud_in" to="/drone4/$(arg cloud_topic_downsample_in)" />
    <remap from="~cloud_out" to="/drone4/$(arg cloud_topic_downsample_out)" />
  </node>

  <!-- drone 5: Downsamples the input cloud -->
